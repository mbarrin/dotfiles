general {
  output_format = i3bar
  colors = true
  interval = 5
}

order += "ethernet wg0"
order += "wireless wlp1s0"
order += "battery 1"
order += "volume master"
order += "disk /"
order += "time"

wireless wlp1s0 {
  format_up = "%quality %ip"
  format_down = "W↓"
}

ethernet wg0 {
  format_up = "Wireguard: %ip"
  format_down = "Wiregaurd: ↓"
}

battery 1 {
  format = "%status %percentage %remaining %consumption"
  hide_seconds = true
  last_full_capacity = true
  low_threshold = 60
  threshold_type = time
  status_chr = "^"
  status_bat = "v"
  status_full = "="
}

time {
  format = "%Y-%m-%d %H:%M %A"
}

tztime berlin {
  format = "32c3: %H:%M"
  timezone = "Europe/Berlin"
}

tztime sf {
  format = "SF: %H:%M"
  timezone = "US/Pacific"
}

disk "/" {
  format = "%free"
}

volume master {
  format = "%volume"
  device = "default"
}
