general {
        colors = false
        interval = 5
}

order += "battery 0"
order += "battery 1"
order += "volume master"
order += "disk /"
order += "wireless wlan0"
order += "ethernet eth0"
order += "cpu_temperature 0"
order += "load"
order += "time"

wireless wlan0 {
        format_up = "%ip (%quality)"
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip"
	format_down = "E: down"
}

battery 0 {
        format = "%percentage %remaining"
        path = "/sys/class/power_supply/BAT%d/uevent"
}

battery 1 {
        format = "%percentage %remaining"
        path = "/sys/class/power_supply/BAT%d/uevent"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

time {
	format = "%d-%m %H:%M"
}

load {
	format = "%1min"
}

cpu_temperature 0 {
	format = "%degrees Â°C"
}

disk "/" {
	format = "%free"
}

volume master {
	format = "%volume"
	device = "default"
}
