general {
  output_format = i3bar
  colors = true
  interval = 5
}

order += "wireless wlp1s0"
order += "battery 1"
order += "volume master"
order += "disk /"
order += "time"

wireless wlp1s0 {
  format_up = " %quality %ip"
  format_down = "Wâ†“"
}

battery 1 {
  format = "%percentage %remaining %consumption"
  hide_seconds = true
  last_full_capacity = true
  low_threshold = 60
  threshold_type = time
}

time {
  format = "%Y-%m-%d %H:%M"
}

disk "/" {
  format = "%free"
}

volume master {
  format = "%volume"
  device = "default"
}
