bindsym $mod+bracketleft move scratchpad
bindsym $mod+bracketright scratchpad show

#Custom bindings
#=
#locks screen. Might make it nicer. White is so last year.
bindsym Mod1+Control+l exec i3lock -c `openssl rand -hex 3`

#Volume down, Volume up, Mute Laptop keyboard
bindsym XF86AudioLowerVolume exec amixer -q set Master 2%- unmute
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2%+ unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

#Volume down, Volume up, Mute Filco
bindsym $mod+minus exec amixer -q set Master 2%- unmute
bindsym $mod+equal exec amixer -q set Master 2%+ unmute

#Brightness down, Brightness up
#Doesn't work on Elitebook 8460p with OSS driver. Patch needs to be applied.
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

#Nautilus
bindsym $mod+Shift+U exec nautilus --no-desktop --browser

#i3-quickswitch
bindsym $mod+o exec quickswitch.py

#Autostart programs
#colour shift
#exec gtk-redshift -l  53.2052:-6.1535 &
#networking applet.
exec nm-applet &
#Sets Wallpaper
#exec feh --bg-scale /home/mbarrington/Pictures/Wallpapers/chaos_knight_wallpaper.jpg
#Disables the fucking beep
exec xset b off
exec urxvtd -q -o -f

